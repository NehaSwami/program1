#include<stdio.h>
#include<stdlib.h>
void bin(long long n)
{
	unsigned i;
	for (i = 1 << 63; i > 0; i = i / 2)
    	(n & i)? printf("1"): printf("0");
    	printf("\n");
}
long long setbit(long long l,int x)
{
    	long long t=1;
    	t=t<<x;
    	bin(l|t);
    	return l|t;
}

long long  resetbit(long long l)
{
    	long long t=0;
    	bin(l&t);
    	return l&t;
}

long long  unsetbit(long long l,int n)
{
    	long long u=1,v;
    	u=u<<n;
    	v=~u;
    	bin(l&v);
    	return l&v;
}
int main()
{
  long long x=0,y;
  y=setbit(0x2F,7);
  //setbit(0x2F,5);
  unsetbit(y,0);
  resetbit(y);
}
